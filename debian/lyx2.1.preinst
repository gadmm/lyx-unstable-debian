#!/bin/sh

set -e

if [ -d /usr/share/doc/lyx2.1 ] && ! readlink /usr/share/doc/lyx2.1 >/dev/null; then
    rm -rf /usr/share/doc/lyx2.1
fi

if readlink /usr/bin/lyx2.1 >/dev/null; then
	update-alternatives --remove lyx /usr/bin/lyx-qt
	update-alternatives --remove lyx /usr/bin/lyx-xforms
fi

