#!/bin/sh

set -e

if [ -d /usr/share/doc/lyx-unstable ] && ! readlink /usr/share/doc/lyx-unstable >/dev/null; then
    rm -rf /usr/share/doc/lyx-unstable
fi

if readlink /usr/bin/lyx-unstable >/dev/null; then
	update-alternatives --remove lyx /usr/bin/lyx-qt
	update-alternatives --remove lyx /usr/bin/lyx-xforms
fi

